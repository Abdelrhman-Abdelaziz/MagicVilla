@model VillaDTO

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete" method="post">
    <br />
    <div class="container p-4 border">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />

        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Details"  class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" disabled class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="Rate" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rate" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Sqft" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sqft" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Amenity" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenity" disabled class="form-control"></textarea>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-5">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>

    </div>
    </div>
</form>

