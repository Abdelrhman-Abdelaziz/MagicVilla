@model IEnumerable<MagicVilla_Web.Models.DTOs.VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
			<h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
			<a asp-controller="VillaNumber" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa Number</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Villa Name
				</th>
				<th>
					Villa Number
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model){
				<tr>
					<td>@item.Villa.Name</td>
					<td>@item.VillaNo</td>
					<td class="text-end">
						<a asp-controller="VillaNumber" asp-action="Edit" asp-route-villaNo="@item.VillaNo" class="btn btn-outline-success">Edit</a>
						<a asp-controller="VillaNumber" asp-action="Delete" asp-route-villaNo="@item.VillaNo" class="btn btn-outline-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
    </table>

</div>